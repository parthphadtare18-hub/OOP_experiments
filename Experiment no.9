#include <iostream>
#include <fstream>
using namespace std;

int main() {
    ifstream fin("First.txt");
    char ch;
    int digits = 0, spaces = 0;
    while (fin.get(ch)) {
        if (isdigit(ch)) digits++;
        if (ch == ' ') spaces++;
    }
    fin.close();
    cout << "Digits: " << digits << "\nSpaces: " << spaces;
    return 0;
}

