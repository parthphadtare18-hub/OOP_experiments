#include <iostream>
using namespace std;

class Shape {
public:
    void area(float r) {  // circle
        cout << "Area of Circle: " << 3.14 * r * r << endl;
    }
    void area(float l, float b) {  // rectangle
        cout << "Area of Rectangle: " << l * b << endl;
    }
    void area(float b, float h, int) {  // triangle (int just to differentiate)
        cout << "Area of Triangle: " << 0.5 * b * h << endl;
    }
};

int main() {
    Shape s;
    s.area(5.0f);          // circle
    s.area(4.0f, 6.0f);    // rectangle
    s.area(5.0f, 10.0f, 0); // triangle
    return 0;
}

