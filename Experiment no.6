#include <iostream>
using namespace std;

class Volume {
public:
    void volume(int a) {  // cube
        cout << "Volume of Cube: " << a * a * a << endl;
    }

    void volume(float r, float h) {  // cylinder
        cout << "Volume of Cylinder: " << 3.14 * r * r * h << endl;
    }

    void volume(int l, int b, int h) {  // rectangular box
        cout << "Volume of Box: " << l * b * h << endl;
    }
};

int main() {
    Volume v;
    v.volume(5);
    v.volume(3.0f, 7.0f);
    v.volume(4, 5, 6);
    return 0;
}
