#include <iostream>
using namespace std;

class City {
public:
    string name;
    long population;

    void accept() {
        cout << "Enter city name: ";
        cin >> name;
        cout << "Enter population: ";
        cin >> population;
    }
};

int main() {
    City c[5];
    for(int i=0;i<5;i++) {
        cout << "\nCity " << i+1 << ":\n";
        c[i].accept();
    }

    int maxIndex = 0;
    for(int i=1;i<5;i++)
        if(c[i].population > c[maxIndex].population)
            maxIndex = i;

    cout << "\nCity with highest population: " << c[maxIndex].name;
    return 0;
}

