#include <iostream>
using namespace std;

class Book {
public:
    string book_name;
    float price;
    void accept() {
        cout << "Enter book name: ";
        cin >> book_name;
        cout << "Enter price: ";
        cin >> price;
    }
    void display() {
        cout << "Book: " << book_name << "  Price: " << price << endl;
    }
};

