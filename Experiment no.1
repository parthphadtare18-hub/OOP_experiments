#include <iostream>
using namespace std;

class Time {
public:
    int h, m, s;
    void accept() {
        cout << "Enter time (HH MM SS): ";
        cin >> h >> m >> s;
    }
    void convert() {
        int total = h * 3600 + m * 60 + s;
        cout << "Total seconds: " << total;
    }
};

int main() {
    Time t;
    t.accept();
    t.convert();
    return 0;
}
