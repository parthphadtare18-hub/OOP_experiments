Problem Statement 1
#include <iostream>
using namespace std;

class Result {
public:
    int marks1, marks2;
    void accept() {
        cout << "Enter two subject marks: ";
        cin >> marks1 >> marks2;
    }
    int total() {
        return marks1 + marks2;
    }
};

void compare(Result r1, Result r2) {
    if(r1.total() > r2.total())
        cout << "Result1 has higher total: " << r1.total();
    else
        cout << "Result2 has higher total: " << r2.total();
}

int main() {
    Result r1, r2;
    cout << "Enter marks for student 1:\n";
    r1.accept();
    cout << "Enter marks for student 2:\n";
    r2.accept();
    compare(r1, r2);
    return 0;
}

Problem Statement 2
#include <iostream>
using namespace std;

class B;  // forward declaration

class A {
public:
    int num1;
    void accept() { cout << "Enter first number: "; cin >> num1; }
    friend void findMax(A, B);
};

class B {
public:
    int num2;
    void accept() { cout << "Enter second number: "; cin >> num2; }
    friend void findMax(A, B);
};

void findMax(A a, B b) {
    if(a.num1 > b.num2)
        cout << "Greater number: " << a.num1;
    else
        cout << "Greater number: " << b.num2;
}

int main() {
    A x;
    B y;
    x.accept();
    y.accept();
    findMax(x, y);
    return 0;
}

Problem Statement 3
#include <iostream>
using namespace std;

class Number {
public:
    int n;
    void accept() {
        cout << "Enter number: ";
        cin >> n;
    }
    void display() {
        cout << n << endl;
    }
    friend void swapValues(Number &, Number &);
};

void swapValues(Number &a, Number &b) {
    int temp = a.n;
    a.n = b.n;
    b.n = temp;
}

int main() {
    Number x, y;
    cout << "Enter first number:\n";
    x.accept();
    cout << "Enter second number:\n";
    y.accept();

    cout << "\nBefore swapping:\n";
    cout << "x = "; x.display();
    cout << "y = "; y.display();

    swapValues(x, y);

    cout << "\nAfter swapping:\n";
    cout << "x = "; x.display();
    cout << "y = "; y.display();
    return 0;
}
