class Person {
    int age;
public:
    void accept() {
        cout << "Enter age: ";
        cin >> age;
    }
    bool operator==(Person p) {
        return age == p.age;
    }
};

int main() {
    Person p1, p2;
    cout << "Enter first person’s age:\n";
    p1.accept();
    cout << "Enter second person’s age:\n";
    p2.accept();

    if(p1 == p2)
        cout << "Both are of the same age.";
    else
        cout << "They have different ages.";
    return 0;
}

