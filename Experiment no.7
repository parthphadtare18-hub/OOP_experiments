#include <iostream>
using namespace std;

class Employee {
    int salary;
public:
    void accept() {
        cout << "Enter salary: ";
        cin >> salary;
    }
    void display() {
        cout << "Salary: " << salary << endl;
    }
    void operator++() {  // prefix increment
        salary += 1000;
    }
};

int main() {
    Employee e;
    e.accept();
    ++e;  // increase salary by 1000
    e.display();
    return 0;
}
