#include <iostream>
using namespace std;

class Outer {
public:
    class Inner {
    public:
        void show() {
            cout << "This is an inner class function.";
        }
    };

    void display() {
        cout << "This is an outer class function.\n";
    }
};

int main() {
    Outer o;
    o.display();

    Outer::Inner i;
    i.show();
    return 0;
}
