#include <iostream>
using namespace std;

class Book {
public:
    string title, author;
    float price;

    void accept() {
        cout << "Enter title: ";
        cin >> title;
        cout << "Enter author: ";
        cin >> author;
        cout << "Enter price: ";
        cin >> price;
    }

    void display() {
        cout << "\nTitle: " << title << "\nAuthor: " << author << "\nPrice: " << price << endl;
    }
};

int main() {
    Book b, *ptr;
    ptr = &b;
    ptr->accept();
    ptr->display();
    return 0;
}

