#include <iostream>
using namespace std;

class Student {
public:
    string name;
    int age;

    Student(string n, int a) {   // parameterized
        name = n;
        age = a;
    }

    Student(Student &s) {        // copy constructor
        name = s.name;
        age = s.age;
    }

    void display() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }
};

int main() {
    Student s1("Parth", 16);
    Student s2(s1);   // copy constructor called
    s2.display();
    return 0;
}

