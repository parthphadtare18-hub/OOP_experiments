#include <iostream>
using namespace std;

class Student {
public:
    string name;
    int roll;
    void getData() {
        cout << "Enter name and roll no: ";
        cin >> name >> roll;
    }
};

class Result : public Student {
    float marks;
public:
    void getMarks() {
        cout << "Enter marks: ";
        cin >> marks;
    }
    void display() {
        cout << "\nName: " << name << "\nRoll: " << roll << "\nMarks: " << marks << endl;
    }
};

int main() {
    Result r;
    r.getData();
    r.getMarks();
    r.display();
    return 0;
}

